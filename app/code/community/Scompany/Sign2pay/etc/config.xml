<?xml version="1.0"?>
<config>
    <modules>
        <Scompany_Sign2pay>
            <version>0.3.9</version>
        </Scompany_Sign2pay>
    </modules>

    <global>
    	<fieldsets>
    		 <sales_convert_quote_payment>
    		 	<check_no>
    		 		<to_order_payment>*</to_order_payment>
    		 	</check_no>
    		 	<check_date>
    		 		<to_order_payment>*</to_order_payment>
    		 	</check_date>
    		 </sales_convert_quote_payment>
    	</fieldsets>
        <models>
            <sign2pay>
                <class>Scompany_Sign2pay_Model</class>
            </sign2pay>
        </models>
        <resources>
            <sign2pay_setup>
                <setup>
                    <module>Scompany_Sign2pay</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </sign2pay_setup>
            <sign2pay_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </sign2pay_write>
            <sign2pay_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </sign2pay_read>
        </resources>
        <blocks>
            <sign2pay>
                <class>Scompany_Sign2pay_Block</class>
            </sign2pay>
        </blocks>
        <helpers>
            <sign2pay>
                <class>Scompany_Sign2pay_Helper</class>
            </sign2pay>
        </helpers>
    </global>
    <default>
        <payment>
            <sign2pay>
                <active>0</active>
                <model>sign2pay/sign2pay</model>
                <order_status>pending_payment</order_status>
		<complete_order_status>processing</complete_order_status>
                <title>Sign2Pay</title>
                <payment_action>sale</payment_action>
                <includeJquery>1</includeJquery>
                <onepage_type>mage_world</onepage_type>
            </sign2pay>
         </payment>
    </default>
    <frontend>
        <routers>
            <sign2pay module="Scompany_Sign2pay">
                <use>standard</use>
                <args>
                    <module>Scompany_Sign2pay</module>
                    <frontName>sign2pay</frontName>
                </args>
            </sign2pay>
        </routers>
        <layout>
            <updates>
                <sign2pay module="Scompany_Sign2pay">
                    <file>sign2pay.xml</file>
                </sign2pay>
            </updates>
        </layout>
        <secure_url>
            <sign2pay_payment_redirect>/sign2pay/payment/redirect</sign2pay_payment_redirect>
        </secure_url>
    </frontend>
</config>
